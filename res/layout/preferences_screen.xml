<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:title="@string/settings"
  android:persistent="true">

  <Preference 
    android:key="selected_account_preference"
    android:title="@string/selected_account" />
 <Preference 
    android:key="note_folder_preference" 
    android:title="@string/note_folder_title"
    android:summary="Notes Stored in %s Folder" />
 
 <ListPreference 
    android:key="title_format_preference" 
    android:title="@string/title_format"
    android:entries="@array/title_format_lbl"
    android:entryValues="@array/title_format_val"
    android:summary="Name the new note with the selected format before the _Note suffix" />

 <CheckBoxPreference
        android:key="first_line_time"
        android:title="@string/title_first_line"
        android:summary="If selected the First Line of the note will contain the date and time of creation with the same format selected for the Note name"
        android:defaultValue="false" />
</PreferenceScreen>
